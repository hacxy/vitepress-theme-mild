{
  "name": "create-mild-theme",
  "type": "module",
  "version": "0.0.1",
  "description": "Create vitepress mild theme.",
  "author": "",
  "license": "MIT",
  "keywords": [
    "cli",
    "create-vitepress-theme"
  ],
  "bin": {
    "create-mild-theme": "index.js"
  },
  "files": [
    "dist",
    "index.js",
    "template"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "unbuild --stub && npm link",
    "build": "unbuild",
    "build:out": "tsc -p tsconfig.build.json",
    "sync": "node scripts/sync-template.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run build && npm run sync",
    "release": "bumpp && pnpm publish"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@hacxy/eslint-config": "^0.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.5",
    "@vitest/coverage-istanbul": "2.1.8",
    "bumpp": "^9.9.1",
    "typescript": "^5.7.2",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.8"
  }
}
