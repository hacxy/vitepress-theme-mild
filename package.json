{
  "name": "root",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "license": "MIT",
  "scripts": {
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "dev": "pnpm -F vitepress-theme-mild run dev",
    "build": "pnpm -F vitepress-theme-mild run build",
    "docs:dev": "pnpm -F docs run dev",
    "docs:build": "pnpm build && pnpm -F docs run build",
    "docs:preview": "pnpm -F docs run preview",
    "temp:dev": "pnpm -F template run dev",
    "temp:build": "pnpm -F template run build",
    "temp:preview": "pnpm -F template run preview",
    "cli:dev": "pnpm -F create-mild-theme run dev",
    "cli:build": "pnpm -F create-mild-theme run build",
    "release": "pnpm -F vitepress-theme-mild run release && pnpm -F create-mild-theme run release",
    "release:theme": "pnpm -F vitepress-theme-mild run release",
    "release:cli": "pnpm -F create-mild-theme run release",
    "prepare": "simple-git-hooks",
    "commit": "git-cz",
    "sync:temp": "pnpm -F create-mild-theme run sync"
  },
  "devDependencies": {
    "@hacxy/eslint-config": "^0.0.6",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-git": "^1.11.0",
    "eslint": "^9.17.0",
    "execa": "^9.5.2",
    "lint-staged": "^15.2.11",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "semver": "^7.6.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.3",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/git-hooks/commit-msg.mjs"
  },
  "lint-staged": {
    "*": [
      "pnpm -r run lint:staged"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": false
    }
  }
}
